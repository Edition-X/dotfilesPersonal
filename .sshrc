if [ $USER == "adminkelly" ]; then
  if [ ! -d dotfiles ]; then
    mkdir dotfiles
    mkdir -p .vim/bundle
    cd dotfiles
    git clone -b Linux_zsh https://github.com/Edition-X/dotfilesPersonal.git .
    git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
    cd
    ln -sf /home/adminkelly/dotfiles/.zshrc /home/adminkelly/.zshrc
    ln -sf /home/adminkelly/dotfiles/.sshrc /home/adminkelly/.sshrc
    ln -sf /home/adminkelly/dotfiles/.vimrc /home/adminkelly/.vimrc
    chsh -s $(which zsh)
    echo "First login! Dotfiles added"
  else
    cd dotfiles
    git pull
    cd
    echo "Pulling dotfiles"
  fi
else
  echo "User: $USER, ignoring personal dotfiles"
fi
