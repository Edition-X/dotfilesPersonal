###########
# GIT STUFF#
############

function clone() {
    git clone --depth=1 $1
    cd $(basename ${1%.*})
    bower install &
    npm install
}

alias status='git status'
alias push='git push'
alias pull='git pull'
# Push Master
alias pushm='git push origin master'
# Pull rebase
alias pullr='git pull --rebase'
# Master checkout
alias master='git checkout master'

# Undo a 'git push'
alias undopush='git push -f origin HEAD^:master'

# Empty the Trash on all mounted values and the main HDD. Then clear the useless sleepimage
alias emptytrash=' \
    sudo rm -rfv /Volumes/*/.Trashes; \
    rm -rfv ~/.Trash/* \
    sudo rm -v /private/var/vm/sleepimage; \
    rm -rv \"/Users/dkelly/Library/Application Support/stremio/Cache\" \
'

# Update installed Ruby gems, Homebrew, npm and their installed packages
alias brew_update='brew -v update; brew upgrade --force-bottle --cleanup; brew cask cleanup; brew prune; brew doctor; npm-check -g -u'

